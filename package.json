{
	"name": "cdg-ortho",
	"version": "1.1.6",
	"description": "A desktop app for managing CDG orthodontic patients",
	"main": "./dist/main/index.js",
	"author": "Ryu Rabino (ryebytescode)",
	"private": true,
	"scripts": {
		"lint": "biome check --write .",
		"format": "biome format --write .",
		"typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
		"typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
		"typecheck": "yarn typecheck:node && yarn typecheck:web",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:create": "yarn db:generate && yarn db:migrate",
		"db:studio": "drizzle-kit studio",
		"db:push": "drizzle-kit push",
		"start": "electron-vite preview --outDir=dist",
		"dev": "electron-vite dev --watch --outDir=dist",
		"build": "yarn typecheck && electron-vite build",
		"package": "yarn clean && yarn db:create && electron-vite build --outDir=dist && electron-forge package",
		"make": "yarn clean && yarn db:create && electron-vite build --outDir=dist && electron-forge make",
		"clean": "ts-node ./scripts/remove-generated.ts"
	},
	"dependencies": {
		"@electron-toolkit/preload": "^3.0.1",
		"@electron-toolkit/utils": "^3.0.0",
		"@hookform/resolvers": "^3.9.1",
		"@libsql/client": "^0.14.0",
		"@mantine/core": "^7.15.2",
		"@mantine/dates": "^7.15.2",
		"@mantine/dropzone": "^7.15.2",
		"@mantine/hooks": "^7.15.2",
		"@mantine/modals": "^7.15.2",
		"@mantine/notifications": "^7.15.2",
		"@paralleldrive/cuid2": "^2.2.2",
		"@tabler/icons-react": "^3.26.0",
		"@tanstack/react-table": "^8.20.6",
		"date-fns": "^4.1.0",
		"dayjs": "^1.11.13",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.38.3",
		"electron-log": "^5.2.4",
		"electron-updater": "^6.3.9",
		"express": "^4.21.2",
		"react-hook-form": "^7.54.2",
		"react-imask": "^7.6.1",
		"react-responsive-masonry": "^2.6.0",
		"react-router": "^7.1.1",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@electron-forge/cli": "^7.6.0",
		"@electron-forge/maker-dmg": "^7.6.0",
		"@electron-forge/maker-squirrel": "^7.6.0",
		"@electron-forge/plugin-vite": "^7.6.0",
		"@electron-toolkit/tsconfig": "^1.0.1",
		"@types/express": "^4",
		"@types/node": "^22.10.2",
		"@types/react": "^19.0.2",
		"@types/react-dom": "^19.0.2",
		"@vitejs/plugin-react": "^4.3.4",
		"drizzle-kit": "^0.30.1",
		"electron": "^33.2.1",
		"electron-vite": "^2.3.0",
		"lefthook": "^1.10.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-scan": "^0.0.54",
		"ts-node": "^10.9.2",
		"typescript": "^5.7.2",
		"vite": "^6.0.5"
	},
	"packageManager": "yarn@4.5.3"
}
