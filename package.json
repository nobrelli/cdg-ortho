{
	"name": "@cdg/ortho",
	"version": "1.0.0",
	"description": "A desktop app for managing CDG orthodontic patients",
	"main": "./out/main/index.js",
	"author": "Gin Ryu Rabino",
	"homepage": "https://electron-vite.org",
	"scripts": {
		"lint": "biome check --write .",
		"format": "biome format --write .",
		"typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
		"typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
		"typecheck": "yarn typecheck:node && yarn typecheck:web",
		"start": "electron-vite preview",
		"dev": "electron-vite dev --watch",
		"build": "yarn typecheck && electron-vite build",
		"postinstall": "electron-builder install-app-deps",
		"build:unpack": "yarn build && electron-builder --dir",
		"build:win": "yarn build && electron-builder --win",
		"build:mac": "electron-vite build && electron-builder --mac",
		"build:linux": "electron-vite build && electron-builder --linux",
		"db:generate:dev": "drizzle-kit generate --config=drizzle-dev.config.ts",
		"db:generate:prod": "drizzle-kit generate --config=drizzle-prod.config.ts",
		"db:migrate:dev": "drizzle-kit migrate --config=drizzle-dev.config.ts",
		"db:migrate:prod": "drizzle-kit migrate --config=drizzle-prod.config.ts",
		"db:studio": "drizzle-kit studio",
		"gen-env-types": "gen-env-types ./.env -o ./src/shared/types/env.d.ts"
	},
	"dependencies": {
		"@electron-toolkit/preload": "^3.0.1",
		"@electron-toolkit/utils": "^3.0.0",
		"@libsql/client": "^0.14.0",
		"@mantine/core": "^7.15.2",
		"@mantine/dates": "^7.15.2",
		"@mantine/form": "^7.15.2",
		"@mantine/hooks": "^7.15.2",
		"@mantine/notifications": "^7.15.2",
		"@paralleldrive/cuid2": "^2.2.2",
		"@tabler/icons-react": "^3.26.0",
		"@tanstack/react-table": "^8.20.6",
		"date-fns": "^4.1.0",
		"dayjs": "^1.11.13",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.38.3",
		"electron-log": "^5.2.4",
		"electron-updater": "^6.3.9",
		"react-imask": "^7.6.1",
		"react-router": "^7.1.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@electron-toolkit/tsconfig": "^1.0.1",
		"@types/node": "^22.10.2",
		"@types/react": "^19.0.2",
		"@types/react-dom": "^19.0.2",
		"@vitejs/plugin-react": "^4.3.4",
		"drizzle-kit": "^0.30.1",
		"electron": "^33.2.1",
		"electron-builder": "^25.1.8",
		"electron-vite": "^2.3.0",
		"gen-env-types": "^1.3.4",
		"lefthook": "^1.10.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2",
		"vite": "^6.0.5"
	},
	"packageManager": "yarn@4.5.3"
}
